{
  "name": "application-name",
  "version": "0.0.1",
  "scripts": {
    "update-modules": "npm install core/database && npm install core/facebook-event-converter && npm install core/facebook-message-sender && npm install core/conversation-manager && npm install core/amazon && npm install core/user-profiler",
    "deploy": "npm run lint && npm run update-modules && sls deploy --stage $SLS_USER",
    "lint": "eslint ./** --ext .js",
    "testbench": "npm run update-modules && cd bench && ./start.sh",
    "testbench:setup": "cd bench && ./setup.sh",
    "testbench:destroy": "cd bench && ./kill.sh"
  },
  "dependencies": {
    "amazon": "file:./core/amazon",
    "database": "file:./core/database",
    "conversation-manager": "file:./core/conversation-manager",
    "facebook-event-converter": "file:./core/facebook-event-converter",
    "facebook-message-sender": "file:./core/facebook-message-sender",
    "user-profiler": "file:./core/user-profiler",
    "node-fetch": "^1.6.2"
  },
  "devDependencies": {
    "aws-sdk": "^2.6.15",
    "body-parser": "^1.15.2",
    "eslint": "^3.7.1",
    "express": "^4.14.0",
    "ngrok": "^2.2.3",
    "nodemon": "^1.11.0"
  }
}
